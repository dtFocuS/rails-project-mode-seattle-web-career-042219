<div class="wrapper-for-calendar-profile">

<table id="calendar-user">
  <caption><%= @month%> 2019</caption>
  <tr class="weekdays">
    <th scope="col">Sun</th>
    <th scope="col">Mon</th>
    <th scope="col">Tues</th>
    <th scope="col">Wed</th>
    <th scope="col">Thurs</th>
    <th scope="col">Fri</th>
    <th scope="col">Sat</th>
  </tr>

  <%= render "layouts/days_other_month"%>
  <%k = 1%>
    <% while k < Date.new(2019, Date::MONTHNAMES.index(@month), -1).day + 1%>
    <td class="day">
      <div class="date"><%= k%></div>
        <%count = 0%>
      <% @tasks.each do |task|%>

        <% if task.day == k%>
          <%count += 1%>
        <%end%>
    <%end%>
      <% if count > 0 %>
        <div class="event">
          <%= count%>
        </div>
      <%end%>
    </td>

    <%k += 1%>
  <%end%>
</tr>

</table>
</div>
