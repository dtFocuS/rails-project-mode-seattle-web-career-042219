<header class="site-header">
  <div class="wrapper">
    <div class="site-header__logo">
        <%= link_to "Task App", users_path%>
    </div>

        <nav class="primary-nav--pull-right">
        <% if logged_in? %>
          <ul class="primary-nav__ul">

            <li class="primary-nav__li"><%= link_to "Log out", logout_path, class: "btn" %></li>
            <li class="primary-nav__li"><%= link_to "Settings", '#', class: "btn" %></li>

            <li class="primary-nav__li dropdown show">
              <a class="btn dropdown-toggle" id="dropdownMenuLink" href="<%= friends_path%>" role="button" data-toggle="dropdown">Friends</a>
            <div class="dropdown-menu">
              <%= link_to "Received Requests", received_path, class: "dropdown-item" %>
              <%= link_to "Sent Requests", sent_path, class: "dropdown-item"%>
            </div>
            </li>
            <li class="primary-nav__li"><%= link_to "Profile", class: "btn" %></li>
          </ul>
        <% else %>

          <ul class="primary-nav__ul">
            <li class="primary-nav__li"><%= link_to "Log in", login_path, class: "primary-nav__a" %></li>
          </ul>
        <% end %>
    </nav>
  </div>
</header>
