<header class="site-header">
  <div class="wrapper">
    <div class="site-header__logo">
        <%= link_to "Task App", users_path%>
    </div>

        <nav class="primary-nav--pull-right">
        <% if logged_in? %>
          <ul class="primary-nav__ul">

            <li class="primary-nav__li"><%= link_to "Log out", logout_path, class: "btn_custom" %></li>
            <li class="primary-nav__li"><%= link_to "Settings", '#', class: "btn_custom" %></li>
          </ul>
            <div class="primary-nav__li dropdown">
              <button class="btn  btn-secondary dropdown-toggle btn_custom-drop" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Friends</button>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <%= link_to "Friend List", friends_path,  class: "dropdown-item"%>
                <%= link_to "Received Requests", received_path, class: "dropdown-item" %>
                <%= link_to "Sent Requests", sent_path, class: "dropdown-item"%>
              </div>
            </div>
            <ul class="primary-nav__ul">
              <li class="primary-nav__li"><%= link_to "Profile", current_user, class: "btn_custom" %></li>
            </ul>
        <% else %>

          <ul class="primary-nav__ul">
            <li class="primary-nav__li"><%= link_to "Log in", login_path, class: "primary-nav__a" %></li>
          </ul>
        <% end %>
    </nav>
  </div>
</header>
