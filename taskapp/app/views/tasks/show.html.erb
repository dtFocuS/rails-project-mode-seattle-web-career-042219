<h2>Task <%= @task.id%></h2>
<%= link_to "Edit Task", edit_task_path(@task)%>
<p>Descriptoin: <%= @task.description%></p>
<p>Date: <%= @task.date%></p>
<p>Time: <%= @task.duration%></p>
<%if @task.urgent%>
  <p style="color: red">Urgent!!</p>
<%end%>
<label>Comments: </label>
<% @task.comments.each do |comment|%>
  <div class="comment">
    <p><%=comment.content%> - <%=comment.commenter%></p><br>
  </div>
<%end%>
<br>
<%= form_for @task.comments.build do |f| %>
  <p>Add a Comment: </p>
  <%= f.hidden_field :task_id%>
  <%= f.text_area :content%>
  <%= f.submit "Enter"%>
<% end %>
